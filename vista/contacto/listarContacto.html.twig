{% extends "basePrivada.html.twig" %}
 
{% block title %} Lista de Contactos {% endblock %}
{% block contenedor %}   
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th>Asocioado a SM</th>
      <th>Activo</th>
      <th>Controles</th>
    </tr>
  </thead>
  <tbody>
    {% for item in contactos %}
      
        <tr>
          <td>
            {% autoescape 'html' %}
              {{ item.nombre|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td>
            {% autoescape 'html' %}
              {{ item.apellido|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td>
            {% autoescape 'html' %}
              {{ item.telefono|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td>
            {% autoescape 'html' %}
              {{ item.correo|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td class="celda-numero">
            {% autoescape 'html' %}
              {{ item.asociadosm|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td class="celda-numero">
            {% autoescape 'html' %}
              {{ item.activo|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td class="controles">
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> 
            
          <!--Modificar contacto-->
          <form method="post" action="privado.php?c=contacto&a=modificar" id="modificarContacto{{item.idcontacto}}">
            <input type="hidden" value="{{item.idcontacto}}" name="idcontacto">
            <a href="javascript:{}" onclick="document.getElementById('modificarContacto{{item.idcontacto}}').submit(); return false;">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
          </form>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </td>
        </tr>
    {% endfor %}
  </tbody>
  </table>

{% endblock %}