{% extends "basePrivada.html.twig" %}
 
{% block title %} Lista de Contactos {% endblock %}
{% block contenedor %}   
  <h5 id="referenciasRol"><span class="glyphicon glyphicon-tag" style="font-size:10px" aria-hidden="true"></span>Referencias <small>[ SM = Swiss Medical ]</small></h5>
  <div class="row fila-de-alerta">
      <div class=" col-lg-2"></div>
         <div class=" col-lg-8">
          {% if aviso == 1 %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>Perfecto!</strong> El contacto fue eliminado correctamente.
              </div>
            {% elseif  aviso == 2 %}
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>Error!</strong> No se pudo eliminar el contacto
              </div>
            {% endif %}
         </div>
      </div>
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Documento</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th>Asociado a SM</th>
      <th>Activo</th>
      <th>Controles</th>
    </tr>
  </thead>
  <tbody>
    {% for item in contactos %}
        <tr>
          <td>
            {% autoescape 'html' %}
              {{ item.nombre|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td>
            {% autoescape 'html' %}
              {{item.apellido|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td>
            {% autoescape 'html' %}
              {{item.tipodocumento}} {{item.documento|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td>
            {% autoescape 'html' %}
              {{ item.telefono|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td>
            {% autoescape 'html' %}
              {{ item.correo|convert_encoding(from='iso-2022-jp', to='UTF-8') }}    
            {% endautoescape %}
          </td>
          <td class="celda-numero">
           
              {% if item.asociadosm == 1 %}
                 Si   
              {% else %}
                 No
              {% endif %}
          
          </td>
          <td class="celda-numero">
            
              {% if item.activo == 1 %}
                Si   
              {% else %}
                No
              {% endif %}
            
          </td>
          <td class="controles">
            <!--Modificar contacto-->
            <form method="post" action="privado.php?c=contacto&a=modificar" id="modificarContacto{{item.idcontacto}}">
              <input type="hidden" value="{{item.idcontacto}}" name="idcontacto">
              <a href="javascript:{}" onclick="document.getElementById('modificarContacto{{item.idcontacto}}').submit(); return false;">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              </a>
            </form>
             <!--Eliminar contacto-->
            <form method="post" action="privado.php?c=contacto&a=baja" id="bajaContacto{{item.idcontacto}}">
              <input type="hidden" value="{{item.idcontacto}}" name="idcontacto">
              <a href="javascript:{}" onclick="if(confirm('¿Estas seguro de enviar este formulario?')){document.getElementById('bajaContacto{{item.idcontacto}}').submit();}">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </a>
            </form> 
          </td>
        </tr>
    {% endfor %}
  </tbody>
  </table>

{% endblock %}