{% extends "basePrivada.html.twig" %}
 
{% block title %} Crear Nuevo Contacto {% endblock %}
{% block contenedor %}
	<form class="form-horizontal" action="privado.php?c=contacto&a=alta" role="form" method="POST">
		<div class="contenedor-formulario">
			<div class="row fila-de-alerta">
				<div class=" col-lg-4"></div>
				 <div class=" col-lg-4">
				 	{% if aviso == true %}
						<div class="alert alert-success alert-dismissable">
		   	 				<button type="button" class="close" data-dismiss="alert">×</button>
		    				<strong>Perfecto!</strong> El contacto fue dado de alta con exito.
	  					</div>
  					{% endif %}
				 </div>
			</div>
			<div class="row fila-de-titulo">
				<div class=" col-lg-4"></div>
				 <div class=" col-lg-4">
					<h3> Nuevo Contacto</h3>
				 </div>
			</div>
			 <div class="row">
			 	<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Nombre: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="nombre" required/>
						</div>
					</div>
				</div>
				<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Apellido: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="apellido">
						</div>
					</div>
				</div>
			  </div>
			   <div class="row">
			 	<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Telefono: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="telefono">
						</div>
					</div>
				</div>
				<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Domicilio: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="domicilio">
						</div>
					</div>
				</div>
			 </div>
			 <div class="row">
			 	<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Correo: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="correo">
						</div>
					</div>
				</div>
			 </div>
			  <div class="row">
			 	<div class=" col-lg-6">
					<input class="col-lg-2" type="checkbox" name="sm"> 
					<label class="col-lg-8">¿Asociado a SM? </label>
			    </div>
				<div class=" col-lg-6">
					<input class="col-lg-2" type="checkbox" name="activo"> 
					<label class="col-lg-8">¿Activo? </label>
				</div>
			 </div>
			 <div class="row fila-de-boton">
			 	<div class=" col-lg-4"></div>
			 	<div class=" col-lg-4">
				<button type="submit" class="btn btn-default btn-lg btn-block col-lg-4" name="enviarContacto">Enviar</button>
				</div>
				<div class=" col-lg-4"></div>
			</div>

		</div>
	</form>
{% endblock %}