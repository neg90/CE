{% extends "basePrivada.html.twig" %}
 
{% block title %} Detalle Correo{% endblock %}
{% block contenedor %}{{id}}

 
  <div class="row fila-de-titulo">
    <div class=" col-lg-4"></div>
    <div class=" col-lg-4">
      <h3> Detalle de carga de medidor</h3>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
      <div class="panel panel-primary ">
          <div class="panel-heading">
            <h3 class="panel-title">Numeros del informe</h3>
          </div>
          <div class="panel-body">
             <div class="row inf" >
                <h5> Total de correos enviados: {{cantEmpresas + cantContactos}} </h5> 
              </div>
              <div class="row inf" >
                <h5> Total correos de empresas: {{cantEmpresas}} </h5> 
              </div>
              <div class="row inf">
                <h5> Total correos de contactos: {{cantContactos}} </h5> 
              </div>            
          </div>
        </div>
  </div>
  </div>
  <div class="row">
    <div class="row fila-de-titulo">
      <div class=" col-lg-1"></div>
      <div class=" col-lg-10">
        <h4> Se enviaron correos a las siguentes empresas y sus contactos asociados</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Empresas</th>
          </tr>
        </thead>
        <tbody>
          {% for item in empresasVista1 %}
            <tr>
              <td>
               {{item}}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
     </div>
       <div class="col-lg-6">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Empresas</th>
          </tr>
        </thead>
        <tbody>
          {% for item in empresasVista2 %}
            <tr>
              <td>
               {{item}}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
     </div>
  </div>
  <div class="clearfix"></div>
{% endblock %}