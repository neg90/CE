{% extends "basePrivada.html.twig" %}
 
{% block title %}Formulario Correo {% endblock %}

{% block contenedor %}
	
	<form class="form-horizontal" action="privado.php?c=correo&a=enviar" role="form" method="POST">
	
	<div class="contenedor-formulario">
			
			<div class="row fila-de-alerta">
				<div class=" col-lg-2"></div>
				 <div class=" col-lg-8">
				 	{% if aviso == 1 %}
						<div class="alert alert-success alert-dismissable">
		   	 				<button type="button" class="close" data-dismiss="alert">×</button>
		    				<strong>Perfecto!</strong> la operacion fue exitosa
	  					</div>
  					{% elseif  aviso == 2 %}
  						<div class="alert alert-danger alert-dismissable">
		   	 				<button type="button" class="close" data-dismiss="alert">×</button>
		    				<strong>Ocurrio un error!</strong> No logramos realizar la operacion
	  					</div>
	  				{% endif %}
				 </div>
			</div>
			<div class="row fila-de-titulo">
				<div class=" col-lg-4"></div>
				 <div class=" col-lg-4">
					<h3> Formulario Correo</h3>
				 </div>
			</div>
			<div class="row aviso-completar">
				<div class=" col-lg-3"></div>
				<div class=" col-lg-6 col-md-6 col-sm-6 recuadro-aviso">
					<div class="alert alert-warning">
   	 					<strong> Los campos marcados con * deben ser completados obligatoriamente </strong>
  					</div>
				</div>
			</div>
			 <div class="row">
			 	<div class="col-lg-12"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Asunto: *</label>
						<div class="col-lg-8 "> 
						  <input type="text" class="form-control" name="asunto" placeholder="Asunto" required/>
						</div>
					</div>
				</div>
			  </div>
			  <div class="row">
			 	<div class="col-lg-12"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Msj: *</label>
						<div class="col-lg-8 " > 
							<div id="wmd-button-bar">
						 		<textarea 
						 		id="wmd-input" name="detactividad" onkeypress="return limita(event, 6000);"rows="20"cols="123">
						 		</textarea>
					 		</div>
						</div>
					</div>
				</div>
			  </div>
			 <div class="row fila-de-boton">
			 	<div class=" col-lg-4"></div>
			 	<div class=" col-lg-4">
					<button type="submit" class="btn btn-default btn-lg btn-block col-lg-4" name="enviarCorreo">Enviar</button>
				</div>
				<div class=" col-lg-4"></div>
			</div>

		</div>
	</form>
{% endblock %}