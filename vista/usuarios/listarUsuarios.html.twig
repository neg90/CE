{% extends "basePrivada.html.twig" %}
 
{% block title %} Lista de usuarios {% endblock %}
{% block contenedor %}
  <h3 id="tituloBloque">Listado de usuarios</h3>
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Usuario</th>
      <th>E-mail</th>
      <th>Rol</th>
      <th>Activo</th>
      <th>Controles</th>
    </tr>
  </thead>
  <tbody>
    {% if ListaUsuarios is null %}
		<tr>
			<td colspan="7">
				No se encontraron usuarios.
			</td>
		</tr>
	{% else %}
		{% for usuario in ListaUsuarios %}
			<tr>
				<td> {{ usuario.nombre }}</td>
				<td> {{ usuario.apellido }}</td>
				<td> {{ usuario.username }}</td>
				<td> {{ usuario.correo }}</td>
				{% if ListaRoles is null %}
					<td> - </td>
				{% else %}
					{% for rol in ListaRoles %}
						{% if rol.idrol == usuario.idrol %}
							<td> {{ rol.nombre }}</td><!-- PONER NOMBRE DE ROL, le paso array de roles, y le paso el index {{ usuario.idrol }}-->
						{% endif %}
					{% endfor %}
				{% endif %}
				<td> 
					<div class="btn-group btn-group-xs" role="group" aria-label="...">
					{% if usuario.activo == 1 %}
  							<button type="button" class="btn btn-default" style="background-color:#45B500; color:white; font-weight:bold"> SI </button>
  							<button type="button" class="btn btn-default"> NO</button>
					{% else %}
							<button type="button" class="btn btn-default"> SI </button>
  							<button type="button" class="btn btn-default" style="background-color:#F33D00;color:white;font-weight:bold"> NO</button>
					{% endif %}
					</div>
				</td>
				<td>
					<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
				</td>
			</tr>
		{% endfor %}
	{% endif %}
  </tbody>
  </table>
{% endblock %}