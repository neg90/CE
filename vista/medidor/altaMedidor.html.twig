{% extends "basePrivada.html.twig" %}
 
{% block title %} Crear titular de medidor {% endblock %}
{% block contenedor %}
	<form class="form-horizontal" action="privado.php?c=medidor&a=alta" role="form" method="POST">
		<div class="contenedor-formulario">
			<div class="row fila-de-alerta">
				<div class=" col-lg-4"></div>
				 <div class=" col-lg-4">
				 	{% if aviso is null %}
				 	{% else %}
				 		{% if tipoAviso == 'exito' %}
				 		<div class="alert alert-success alert-dismissable">
		   	 				<button type="button" class="close" data-dismiss="alert">×</button>
		    				  {{aviso}}
	  					</div>
	  					{% elseif tipoAviso == 'error' %}
	  						<div class="alert alert-danger alert-dismissable">
		   	 				<button type="button" class="close" data-dismiss="alert">×</button>
		    				  {{aviso}}
	  					</div>
	  					{% endif %}
  					{% endif %}
				 </div>
			</div>
			<div class="row fila-de-titulo">
				<div class=" col-lg-4"></div>
				 <div class=" col-lg-4">
					<h3> Nuevo titular de medidor</h3>
				 </div>
			</div>
			<div class="row aviso-completar">
				<div class=" col-lg-4"></div>
				<div class=" col-lg-4 col-md-4 col-sm-4 recuadro-aviso">
					<div class="alert alert-warning">
   	 					<center><strong> (*) Todos los campos son obligatorios </strong></center>
  					</div>
				</div>
			</div>
			 <div class="row">
			 	<div class="col-lg-6"> 
			 		<div class="form-grouv">
						<label class="col-lg-2 control-label">Apellido y Nombre: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" pattern="[a-zA-Z ]+" title="No parece un apellido y nombre válido" name="nomyap" required/>
						</div>
					</div>
				</div>
			  </div>
			   <div class="row">
			 	<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Teléfono: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="telefono" pattern="[0-9- ]+" title="No parece un teléfono válido" required/>
						</div>
					</div>
				</div>
				<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Domicilio: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="domicilio" pattern="[a-zA-Z0-9 ]+" title="No parece una dirección válida" required/>
						</div>
					</div>
				</div>
			 </div>
			 <div class="row">
			 	<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Importe: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="importe" pattern="[0-9., ]+" title="No parece un importe válido" required/>
						</div>
					</div>
				</div>
			 	<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Número de usuario: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="numusuario" pattern="[a-zA-Z0-9 -]+" title="No parece un número de usuario válido" required/>
						</div>
					</div>
				</div>
				<div class="col-lg-6"> 
			 		<div class="form-group">
						<label class="col-lg-2 control-label">Número de suministro: </label>
						<div class="col-lg-6 "> 
						  <input type="text" class="form-control" name="numsuministro" pattern="[a-zA-Z0-9 -]+" title="No parece un número de suministro válido" required/>
						</div>
					</div>
				</div>
			 </div>
			  <div class="row">
				<div class=" col-lg-6">
					<input class="col-lg-2" type="checkbox" name="activo" checked> 
					<label class="col-lg-8">¿Activo? </label>
				</div>
			 </div>
			 <div class="row fila-de-boton">
			 	<div class=" col-lg-1"></div>
			 	<div class=" col-lg-4">
			 		<a href="privado.php?c=medidor&a=listar" class="btn btn-default btn-lg btn-block col-lg-4">Volver al listado</a>
			 	</div>
			 	<div class=" col-lg-4">
				<button type="submit" class="btn btn-default btn-lg btn-block col-lg-4" name="enviarMedidor">Enviar</button>
				</div>
				<div class=" col-lg-4"></div>
			</div>

		</div>
	</form>
{% endblock %}