{% extends "basePrivada.html.twig" %}
 
{% block title %} Lista de Medidores {% endblock %}
{% block contenedor %}
  <h3 id="tituloBloque">Listado de Medidores</h3>
  <div class="clearfix"></div>
  {% if eliminado == null %}
  {% elseif eliminado == 1 %}
  	<div class="alert alert-success" role="alert">El titular fue eliminado correctamente</div>
  {% else %}
  	<div class="alert alert-success" role="alert">El titular no pudo ser eliminado</div>
  {% endif %}
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Apellido y Nombre</th>
      <th>Tel√©fono</th>
      <th>Domicilio</th>
      <th>Empresa </th>
      <th>Imp. Pago</th>
      <th>Num. Usuario</th>
      <th>Num. Suministro</th>
      <th>Activo</th>
      <th>Controles</th>
    </tr>
  </thead>
  <tbody>
    {% if ListaMedidores is null %}
		<tr>
			<td colspan="8">
				No se encontraron titulares.
			</td>
		</tr>
	{% else %}
		{% for medidor in ListaMedidores %}
			<tr>
				<td> {{ medidor.nomyap }}</td>
				<td> 
					{% if medidor.telefono != null %}
						{{ medidor.telefono }}
					{% else %}
						N/A
					{% endif %}
				</td>
				<td> 
					{% if medidor.domicilio != null %}					
						{{ medidor.domicilio }}
					{% else %}
						N/A
					{% endif %}
				</td>
				<td> Lorem Ipsum </td>
				<td> <small>$</small> {{ medidor.importepago }}</td>
				<td> {{ medidor.numusuario }}</td>
				<td> {{ medidor.numsuministro }}</td>
				<td> 
					{% if medidor.activo == 1 %}
						<span class="glyphicon glyphicon-ok" style="color:green" aria-hidden="true"></span>
					{% else %}
						<span class="glyphicon glyphicon-remove" style="color:red" aria-hidden="true"></span>
					{% endif %}
				</td>
				<td class="controles">
				<!--Modificar medidor-->
					<form method="post" action="privado.php?c=medidor&a=modificar" id="modificarMedidor{{medidor.idumedidor}}">
						<input type="hidden" value="{{medidor.idmedidor}}" name="idmedidor">
						<a href="javascript:{}" onclick="document.getElementById('modificarMedidor{{medidor.idmedidor}}').submit(); return false;">
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
						</a>
					</form>
				<!--Eliminar medidor  -->
					<form method="post" action="privado.php?c=medidor&a=eliminar&id={{medidor.idmedidor}}" id="eliminaMedidor{{medidor.idmedidor}}">
						<a href="javascript:{}" onclick="document.getElementById('eliminaMedidor{{medidor.idmedidor}}').submit(); return false;">
							<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
						</a>
					</form>
				</td>
			</tr>
		{% endfor %}
	{% endif %}
  </tbody>
  </table>
{% endblock %}